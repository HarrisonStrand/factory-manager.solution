@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Hired Engineers:</h1>

@if (@Model.Count == 0)
{
  <h2>No Engineers have been hired yet...</h2>
}

@foreach(Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    @using (Html.BeginForm("Delete", "Engineers", FormMethod.Get))
  {
    @Html.Hidden("id", @engineer.EngineerId)
    <input type="submit" value="Remove Engineer" class="btn btn-default"/>
  }
}

<p>@Html.ActionLink("Add New Engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>