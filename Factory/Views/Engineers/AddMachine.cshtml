@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a Machine License</h2>

<h2>Add a Machine License for: @Html.DisplayFor(model => model.EngineerName)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select a Machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save" class="btn btn-default" />
}

<p>@Html.ActionLink("Back to Engineers", "Index")</p>