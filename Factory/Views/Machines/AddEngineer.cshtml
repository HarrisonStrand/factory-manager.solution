@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a Engineer to this Machine</h2>

<h2>Add a Engineer for: @Html.DisplayFor(model => model.MachineName)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select an Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" class="btn btn-default" />
}

<p>@Html.ActionLink("Back to Machines", "Index")</p>